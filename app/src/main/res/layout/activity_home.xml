<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/icon_bg"
    tools:context="com.example.bugssolveinc.bangou.activity.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageView
                    android:background="@drawable/bangoe_logo"
                    android:layout_width="145dp"
                    android:gravity="center"
                    android:layout_height="match_parent" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1.25"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="45dp"
                android:paddingRight="45dp"
                android:layout_height="match_parent">

                <com.example.bugssolveinc.bangou.font.MyButtonBlack
                    android:layout_width="155dp"
                    android:layout_height="45dp"
                    android:id="@+id/btn_play"
                    android:layout_gravity="center"
                    android:text="@string/play"
                    android:textColor="#000000"
                    android:background="@drawable/button_bg_rounded_corners"/>

                <com.example.bugssolveinc.bangou.font.MyButtonBlack
                    android:id="@+id/btn_rate"
                    android:layout_width="155dp"
                    android:layout_gravity="center"
                    android:text="@string/rate"
                    android:textColor="#000000"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/button_bg_rounded_corners"
                    android:layout_height="45dp" />

                <com.example.bugssolveinc.bangou.font.MyButtonBlack
                    android:id="@+id/btn_help"
                    android:layout_width="155dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:text="@string/help"
                    android:textColor="#000000"
                    android:background="@drawable/button_bg_rounded_corners"
                    android:layout_height="45dp" />

            </LinearLayout>



        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_weight="2.45"
            android:paddingTop="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/iv_set_music"
                    android:src="@drawable/sound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_weight="1"
                android:gravity="right"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_share"
                    android:src="@drawable/share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>




        </LinearLayout>


    </LinearLayout>



</LinearLayout>
