<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:right="0dp" android:top="0dp">
                <shape>
                    <corners android:radius="0dp" />
                    <solid android:color="#D6D6D6" />
                </shape>
            </item>
            <item android:bottom="2.5dp" android:left="0dp" android:top="0dp" android:right="1.5dp" >
                <shape>
                    <gradient android:angle="270"
                        android:endColor="#EC5054" android:startColor="#EC5054" />
                    <stroke android:width="0.5dp" android:color="#BABABA" />
                    <corners android:radius="0dp" />

                </shape>
            </item>
        </layer-list>
    </item>

</selector>